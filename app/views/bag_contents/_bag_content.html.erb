<% if bag_content.item_list.cover_image.present? %>
  <div class="card bg-slate-50 w-64 aspect-[16/9] rounded shadow relative dark:bg-base-200">
    <div class="card-title flex justify-between items-center p-2 text-lg w-full relative">
      <div class="flex-grow pl-2" style="cursor: default;">
        <%= bag_content.item_list.name %>
      </div>
    </div>
    <figure>
      <%= link_to item_list_bag_content_path(bag_content.item_list, bag_content), class: "w-full h-full block" do %>
        <%= image_tag bag_content.item_list.cover_image.url, class: "w-64 aspect-[16/9] object-cover" %>
      <% end %>
    </figure>
  </div>
<% else %>
  <div class="card bg-slate-50 w-64 aspect-[16/9] rounded shadow relative dark:bg-base-200">
    <div class="card-title flex justify-between items-center p-2 text-lg w-full relative">
      <div class="flex-grow pl-2" style="cursor: default;">
        <%= bag_content.item_list.name %>
      </div>
    </div>
    <%= link_to item_list_bag_content_path(bag_content.item_list, bag_content), class: "w-full h-full block bg-base-200" do %>
    <% end %>
  </div>
<% end %>
