<% content_for(:title, t('.title')) %>
  <div class="flex flex-col items-center justify-center p-5">
    <h1 class="text-lg font-medium text-center mb-12"><%= @place %>のマストアイテム</h1>
    <div class="flex flex-wrap justify-center md:justify-start gap-8">
      <% if @recommends.present? %>
        <% @recommends.each do |recommend| %>
          <%= link_to recommend_path(recommend), class: "card bg-slate-50 w-64 h-64 shadow rounded p-5 flex flex-col relative" do %>
            <h2 class="text-base font-medium mb-2"><%= recommend.item %></h2>
            <p class="text-sm mb-4 flex-grow"><%= recommend.body.truncate(30) %></p>
            <% if recommend.item_image? %>
              <%= image_tag recommend.item_image_url, class: "w-full h-32 object-cover rounded shadow" %>
            <% end %>
          <% end %>
        <% end %>
      <% else %>
        <p class="text-center text-gray-500">マストアイテムが見つかりませんでした</div>
      <% end %>
    </div>
  </div>
