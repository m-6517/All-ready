<div class="container mx-auto pt-3 py-24">
  <h1 class="text-lg font-medium mb-6"><%= @place %>のおすすめアイテム</h1>
  <div class="flex flex-wrap justify-center md:justify-start">
    <% if @recommends.present? %>
      <% @recommends.each do |recommend| %>
        <div class="item-card bg-slate-50 shadow rounded-lg p-4 m-2">
          <h2 class="text-base font-medium">
            <%= link_to recommend.item, recommend_path(recommend) %>
          </h2>
        </div>
      <% end %>
    <% else %>
      <div class="mb-3 text-center text-gray-500">おすすめアイテムが見つかりませんでした！</div>
    <% end %>
  </div>
</div>
