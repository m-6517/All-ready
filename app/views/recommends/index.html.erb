<% content_for(:title, t('.title')) %>
  <div class="container mx-auto pt-3 px-12 py-24">
    <div class="flex justify-start items-center bg-base-100">
      <div class="flex items-center">
        <span class="material-symbols-outlined text-2xl text-primary" style="font-variation-settings: 'FILL' 1;">lightbulb_2</span>
        <h1 class="text-lg font-medium ml-3">マストアイテム</h1>
      </div>
    </div>
    <div class="flex flex-wrap justify-start gap-8 mt-12">
      <% if @recommends.present? %>
        <% @recommends.each do |place, recommends| %>
          <div class="card shadow rounded p-5 flex flex-col w-full max-w-lg bg-slate-50">
            <%= link_to by_place_recommends_path(place), class: "block h-full" do %>
              <h2 class="text-lg font-semibold text-center"><%= place %></h2>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p class="text-center text-gray-500 m-12">マストアイテムが見つかりませんでした</p>
      <% end %>
    </div>
  </div>
  <%= link_to new_recommend_path, class: "fixed bottom-20 right-20 bg-primary text-white font-bold rounded-full text-lg p-5 flex items-center justify-center shadow transition-all duration-300 hover:brightness-110" do %>
    <span class="material-symbols-outlined text-2xl">add</span>
  <% end %>
