<% content_for(:title, t('.title')) %>
<div class="container mx-auto pt-3 py-24">
  <div class="fixed top-16 right-0 left-0 z-30 flex justify-center p-4 bg-base-100 sticky">
      <button class="btn btn-primary" onclick="document.getElementById('addItemList').showModal()">持ち物リストを作成</button>

      <dialog id="addItemList" class="modal">
        <div class="modal-box bg-slate-50 w-96 mx-auto flex flex-col items-center py-12">
          <%= form_with model: @item_list, url: item_lists_path, local: true do |f| %>
            <label class="form-control w-full max-w-xs">
              <input type="text" placeholder="リストの名前" name="item_list[name]" class="input input-bordered w-full max-w-xs" required />
            </label>
            <div class="mt-4">
              <%= f.submit '決定', class: "btn btn-primary w-full" %>
            </div>
          <% end %>
          <div class="modal-action">
            <form method="dialog">
              <button class="btn btn-ghost">キャンセル</button>
            </form>
          </div>
        </div>
      </dialog>
  </div>

  <div class="flex flex-wrap justify-center gap-8 mt-6">
    <% if @item_lists.present? %>
      <%= render @item_lists %>
    <% end %>
  </div>
