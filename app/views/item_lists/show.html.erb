<div class="container mx-auto pt-3 py-24">
  <div class="flex flex-col items-center">
    <div class="flex items-center gap-6">
      <h1 class="text-lg font-medium text-center"><%= @item_list.name %></h1>
      <i class="fa-solid fa-pen-to-square" onclick="openItemModal()"></i>

      <dialog id="itemModal" class="modal">
        <div class="modal-box bg-slate-50 w-96 mx-auto flex flex-col items-center py-12">
          <div class="modal-action flex flex-col mx-auto w-full space-y-6">
            <%= link_to "リストを編集", new_item_list_item_path(@item_list), class: "btn btn-primary w-full" %>
            <button class="btn btn-primary w-full">アイテム数を変更</button>
            <button class="btn btn-ghost w-full" onclick="document.getElementById('itemModal').close()">キャンセル</button>
          </div>
        </div>
      </dialog>
    </div>

    <div class="flex flex-col items-start mt-6 gap-4">
      <% @selected_original_items.each do |item| %>
        <div class="flex items-center gap-2">
          <%= item.name %>
        </div>
      <% end %>
      <% @selected_default_items.each do |item| %>
        <div class="flex items-center gap-2">
          <%= item.name %>
        </div>
      <% end %>
    </div>
  </div>
</div>
