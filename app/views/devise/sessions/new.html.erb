<div class="flex items-center justify-center m-12">
  <div class="max-w-md w-full p-6 rounded-lg shadow-lg">
    <h1 class="text-lg font-medium mb-6">ログイン</h1>

    <%= form_with model: resource, url: session_path(resource_name), local: true, class: "space-y-4" do |f| %>

      <div class="field">
        <%= f.label :email, "メールアドレス", class: "text-sm" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-sm w-full" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class: "text-sm" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered input-sm w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center gap-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "text-sm" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary w-full mt-4" %>
      </div>
    <% end %>
    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>